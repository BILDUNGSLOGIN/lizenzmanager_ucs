	"title": "common",
	"description": "common type definitions",
	"definitions": {
		"urn": {
			"description": "Uniform Resource Name, https://de.wikipedia.org/wiki/Uniform_Resource_Name",
			"type": "string",
			"pattern": "^urn(:[a-z0-9]{1,32})+:[\\S]+$"
		},
		"link": {
			"description": "Ein Link-Element analog zum HTML-Link. Die Semantik (wohin f체hrt der Link) wird durch das rel-Attribut ausgedr체ckt",
			"type": "object",
			"properties": {
				"href": {
					"description": "eine g체ltige URL",
					"type": "string",
					"maxLength": 500,
					"format": "uri"
				},
				"rel": {
					"type": "string",
					"enum": [
						"src",
						"self"
					]
				}
