			"example": "2010100001423381057643823759"			
		},
		"parameters": {
			"title": "Parameter-Liste",
			"description": "eine Liste von Parametern",
			"type":"array",
			"minItems": 0,
			"items": {
				"type":"object"
			}
		}
	}
}