  "title": "MediaQuery",
  "description": "Definiert eine Suchanfrage für eine Liste von Medien, bestehend aus einer Menge von Einzelanfragen",
  "type": "array",
  "minItems": 0,
  "items": {
    "$ref": "#/definitions/SingleMediaQuery"
  },
  "definitions": {
    "SingleMediaQuery": {
      "description": "Suchanfrage nach einem einzelnen Medium.",
      "type": "object",
      "properties": {
        "id": {
          "description": "Query-Parameter für die Suche anhand der Medien-ID",
          "$ref": "media.schema.json#/definitions/MediumIdentifier"
        }
      },
      "required": ["id"]
    }
  }
}
